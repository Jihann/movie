extends ../layout

block content
  .container
    .row
      each tag in tags
        .panel.panel-default
          .panel-heading
            h3
              a(href="/results?tag=#{tag._id}&p=0") #{tag.name}
          .panel-body
            if tag.movies && tag.movies.length > 0
              each item in tag.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('http:') > -1
                        img(src="#{item.poster}", alt="#{item.title}")
                      else
                        img(src="/upload/#{item.poster}", alt="#{item.title}")
                    .caption
                      h3 #{item.title}
                      p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片
